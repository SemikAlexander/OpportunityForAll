<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="20dp"
    android:layout_marginBottom="20dp"
    android:id="@+id/request_athlete_item_vew">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/rv_background"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/status_linear_layout"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#0F032B"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/image_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="28dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="8dp"
                android:scaleType="centerCrop"
                android:src="@drawable/wpf_signature" />

            <TextView
                android:id="@+id/status_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="42dp"
                android:text="@string/new_rv"
                android:textColor="@color/new_rv"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/date_request"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/proxima_nova_semibold"
                android:text="16 Jun 2021"
                android:textAlignment="center"
                android:textColor="@color/date_request_text_color"
                android:textSize="14sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/type_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/proxima_nova_bold"
                android:text="Brand Ambassador - Traditional Media"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:cardCornerRadius="50dp">

                    <ImageView
                        android:id="@+id/photo"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/photo"/>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="14dp"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/proxima_nova_semibold"
                    android:text="Davis Lipshutz "/>

            </LinearLayout>

            <TextView
                android:id="@+id/description_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25sp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/date_request_text_color"
                android:textSize="14sp"
                android:fontFamily="@font/proxima_nova_semibold"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ultrices morbi placerat cras..."/>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>